<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="false"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="true"
>
    <testsuites>
        <testsuite name="yamaki-project/yamaki test suite">
            <directory>./Yamaki/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>../src/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-xml" target="/tmp/coverage.xml"/>
    </logging>
</phpunit>

